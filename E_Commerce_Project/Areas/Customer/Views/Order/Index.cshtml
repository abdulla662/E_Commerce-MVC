@model List<Order>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h2 class="text-center">Order List</h2>

        <!-- Tabs Navigation -->
        <ul class="nav nav-tabs" id="orderTabs" role="tablist">
            <li class="nav-item">
                <button class="nav-link active" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button" role="tab">Pending</button>
            </li>
            <li class="nav-item">
                <button class="nav-link" id="approved-tab" data-bs-toggle="tab" data-bs-target="#approved" type="button" role="tab">Approved</button>
            </li>
            <li class="nav-item">
                <button class="nav-link" id="waiting-tab" data-bs-toggle="tab" data-bs-target="#waiting" type="button" role="tab">Waiting</button>
            </li>
            <li class="nav-item">
                <button class="nav-link" id="shipped-tab" data-bs-toggle="tab" data-bs-target="#shipped" type="button" role="tab">Shipped</button>
            </li>
            <li class="nav-item">
                <button class="nav-link" id="arrived-tab" data-bs-toggle="tab" data-bs-target="#arrived" type="button" role="tab">Arrived</button>
            </li>
            <li class="nav-item">
                <button class="nav-link" id="cancelled-tab" data-bs-toggle="tab" data-bs-target="#cancelled" type="button" role="tab">Canceled</button>
            </li>
        </ul>

        <!-- Tabs Content -->
        <div class="tab-content mt-3">
            <!-- Pending -->
            <div class="tab-pane fade show active" id="pending" role="tabpanel">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Number</th>
                            <th>Status</th>
                            <th>Carrier</th>
                            <th>Total</th>
                            <th>Cancel Order</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.ApplicationUser?.NormalizedEmail</td>
                                <td>@item.TrackingNumber</td>
                                <td>@item.status</td>
                                <td>@item.carrier</td>
                                <td>@item.ordertotal</td>
                                <td>
                                    <a href="/Customer/Order/CancelOrder?OrderId=@item.Id" class="btn btn-danger delete-btn">Cancel</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Approved Orders -->
            <div class="tab-pane fade" id="approved" role="tabpanel">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Number</th>
                            <th>Status</th>
                            <th>Carrier</th>
                            <th>Total</th>
                            <th>Cancel Order</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.approved)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.ApplicationUser?.NormalizedEmail</td>
                                <td>@item.TrackingNumber</td>
                                <td>@item.status</td>
                                <td>@item.carrier</td>
                                <td>@item.ordertotal</td>
                                <td>
                                    <a href="/Customer/Order/CancelOrder?OrderId=@item.Id" class="btn btn-danger delete-btn">Cancel</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Waiting Orders -->
            <div class="tab-pane fade" id="waiting" role="tabpanel">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Number</th>
                            <th>Status</th>
                            <th>Carrier</th>
                            <th>Total</th>
                            <th>Cancel Order</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.waiting)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.ApplicationUser?.NormalizedEmail</td>
                                <td>@item.TrackingNumber</td>
                                <td>@item.status</td>
                                <td>@item.carrier</td>
                                <td>@item.ordertotal</td>
                                <td>
                                    <a href="/Customer/Order/CancelOrder?OrderId=@item.Id" class="btn btn-danger delete-btn">Cancel</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Shipped Orders -->
            <div class="tab-pane fade" id="shipped" role="tabpanel">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Number</th>
                            <th>Status</th>
                            <th>Carrier</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.shipped)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.ApplicationUser?.NormalizedEmail</td>
                                <td>@item.TrackingNumber</td>
                                <td>@item.status</td>
                                <td>@item.carrier</td>
                                <td>@item.ordertotal</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Arrived Orders -->
            <div class="tab-pane fade" id="arrived" role="tabpanel">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Number</th>
                            <th>Status</th>
                            <th>Carrier</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.Arrived)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.ApplicationUser?.NormalizedEmail</td>
                                <td>@item.TrackingNumber</td>
                                <td>@item.status</td>
                                <td>@item.carrier</td>
                                <td>@item.ordertotal</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Cancelled Orders -->
            <div class="tab-pane fade" id="cancelled" role="tabpanel">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Number</th>
                            <th>Status</th>
                            <th>Carrier</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.canceled)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.ApplicationUser?.NormalizedEmail</td>
                                <td>@item.TrackingNumber</td>
                                <td>@item.status</td>
                                <td>@item.carrier</td>
                                <td>@item.ordertotal</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>