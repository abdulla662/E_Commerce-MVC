@model Category


<div class="container my-3">
    <div class="row my-3">
        <!-- Title and Create New Button on the Same Line -->
        <div class="d-flex justify-content-between align-items-center mb-5">
            <h2 class="mb-0">create Category</h2>
        </div>


        <form action="/Admin/Category/create" method="post">
            <div class="form-group mb-3">
                <label for="exampleInputEmail1">Category Name</label>
                <input type="text" class="form-control mt-2" id="name" name="Name" value="@Model.Name">
                <span class="text-danger" asp-validation-for="Name"></span>

            </div>
            <button type="submit" class="btn btn-primary" href="/Admin/Category">Save</button>



        </form>
    </div>
