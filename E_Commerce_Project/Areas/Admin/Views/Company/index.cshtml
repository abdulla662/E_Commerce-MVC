@model List<E_Commerce_Project.Models.Company>

<!-- Include SweetAlert -->

<div class="container my-3">
    <div class="row my-3">
        <!-- Title and Create New Button on the Same Line -->
        <div class="d-flex justify-content-between align-items-center mb-5">
            <h2 class="mb-0">All companies</h2>
            <a href="/Admin/Company/create" class="btn btn-success">Create New</a>
        </div>

        <table class="table table-hover">
            <thead>
                <tr class="bg-dark text-white">
                    <th scope="col">#</th>
                    <th scope="col">company Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Name</td>
                        <td>
                          <a class="btn btn-warning" asp-action="Edit" asp-controller="Company" asp-area="Admin" asp-route-companyId="@item.Id">Edit</a>
                                        <button class="btn btn-danger btn-sm" onclick="confirmDelete(@item.Id)">Delete</button>
                            </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts {
    <script>
        function confirmDelete(companyId) {
            Swal.fire({
                title: "Are you sure?",
                text: "This action cannot be undone!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                cancelButtonColor: "#6c757d",
                confirmButtonText: "Yes, delete it!",
                cancelButtonText: "Cancel"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = "/Admin/Company/Delete?companyId=" + companyId;
                }
            });
        }
    </script>
}





